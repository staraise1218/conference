}

/*鏂板浼氳瀹�*/

.add_title{
	font-size: 20px;
	font-weight: bold;
}

.add_body{
	padding: 20px 10%;
}

.add_body div{
	margin-bottom: 15px;
	display: flex;
	align-items: flex-start;
}

.add_input{
	width: calc(100% - 120px);
	border: 1px solid #ccc;
	outline: none;
	padding: 6px 10px;
}

.add_textarea{
	height: 70px;
}

.add_body span{
	font-size: 16px;
	display: inline-block;
	width: 100px;
	text-align: right;
	margin-right: 10px;
}
.add_pic{
	flex-wrap: wrap;
	/*justify-content: space-around;*/
	border: none;
	padding: 0;
}
.add_pic_img{
	display: inline-block !important;
	width: 32%;
	margin-bottom: 10px;
	margin-right: 1.3%;
	position: relative;
	/* height: 80px; */
	height: 0;
	padding-bottom: 30%;
}
.add_pic_img_btn{
    font-size: 70px;
	border: 1px solid #ddd;
	text-align: center;
    color: #bbb;
	cursor: pointer;
	display: inline-flex;
	align-items: center;
}
.add_pic_img img{
	/* width: 100%;
	height: 80px; */
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
}
.add_pic_img i{
	position: absolute;
	top: 0;
	right: 0;
	background-color: #999;
	color: #fff;
}

.list_table_btn{
	width: auto;
}

