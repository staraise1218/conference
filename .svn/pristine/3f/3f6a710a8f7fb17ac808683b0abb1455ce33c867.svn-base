	line-height: 36px;
	display: inline-block;
}

/*楗肩姸鍥�*/
.table_caption{
	font-size: 32px;
	font-weight: bold;
}

.pie {
	display: inline-block;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: yellowgreen;
    background-image: linear-gradient(to right, transparent 50%, #655 0);
}

.pie::before {
    content: '';
    display: block;
    margin-left: 50%;
    height: 100%;
    border-radius: 0 100% 100% 0/50%;
    background-color: inherit;
    transform-origin: left;
    transform: rotate(.2turn);
}

/*鏄熻瘎*/
.review{
	border-top: 1px dashed #e5e5e5;
	/*border-bottom: 1px dashed #e5e5e5;*/
	margin: 0 10%;
	padding: 30px 0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.star_review{
	display: inline-block;
	padding-left: 100px;
	font-size: 24px;
	font-weight: bold;
}

.star_review .list_table_star li span{
	font-size: 22px;
	margin-left: 2px;
}

.list_table_fen{
	margin-left: 15px;
	font-size: 18px;
}

.review_u{
	margin: 15px 10%;
	padding: 15px 20px;
	border: 1px solid #e5e5e5;
}

.review_u_title{
	font-size: 20px;
	font-weight: bold;
	padding-bottom: 10px;
}

.border_b{
	border-bottom: 1px solid #e5e5e5;
}

